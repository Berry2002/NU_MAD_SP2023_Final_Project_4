<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/quest_gold">

                <TextView
                    android:id="@+id/rankingUserDisplayname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/bergen_sans_regular"
                    android:text="Display name"
                    android:textColor="@color/quest_pink"
                    app:layout_constraintStart_toEndOf="@+id/imageViewRankingsUser"
                    app:layout_constraintTop_toTopOf="@+id/imageViewRankingsUser" />

                <ImageView
                    android:id="@+id/imageViewRankingsUser"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/no_image_found" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Questing since"
                    android:textColor="@color/quest_blue"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="@+id/rankingUserDisplayname"
                    app:layout_constraintTop_toBottomOf="@+id/rankingUserDisplayname" />

                <Button
                    android:id="@+id/rankingsUserExp"
                    android:layout_width="129dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="44dp"
                    android:background="@color/quest_blue"
                    android:fontFamily="@font/bergen_sans_regular"
                    android:text="#1: 3460 EXP"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>