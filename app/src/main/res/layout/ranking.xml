<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/displayName_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        app:layout_constraintBottom_toBottomOf="@+id/profilePic_ranking"
        app:layout_constraintEnd_toStartOf="@+id/exp_ranking"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/profilePic_ranking"
        app:layout_constraintTop_toTopOf="@+id/profilePic_ranking" />

    <ImageView
        android:id="@+id/crown_ranking"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rankingPosition_ranking"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rankings_icon" />

    <ImageView
        android:id="@+id/profilePic_ranking"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="@+id/rankingPosition_ranking"
        app:layout_constraintEnd_toStartOf="@+id/displayName_ranking"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rankingPosition_ranking"
        app:layout_constraintTop_toTopOf="@+id/rankingPosition_ranking"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/rankingPosition_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1"
        app:layout_constraintBottom_toBottomOf="@+id/crown_ranking"
        app:layout_constraintEnd_toStartOf="@+id/profilePic_ranking"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/crown_ranking"
        app:layout_constraintTop_toTopOf="@+id/crown_ranking"
        app:layout_constraintVertical_bias="0.478" />

    <TextView
        android:id="@+id/exp_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000 exp"
        app:layout_constraintBottom_toBottomOf="@+id/displayName_ranking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/displayName_ranking"
        app:layout_constraintTop_toTopOf="@+id/displayName_ranking"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>