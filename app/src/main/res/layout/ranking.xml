<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quest_light_pink"
    app:barrierMargin="@dimen/cardview_default_radius">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/cardview_default_elevation"
            android:background="@color/black"
            android:backgroundTint="@color/quest_gold">

            <TextView
                android:id="@+id/textView_exp_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/tcm"
                android:text="2000 exp"
                android:textColor="@color/quest_pink"
                app:layout_constraintBottom_toBottomOf="@+id/displayName_ranking"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/displayName_ranking" />

            <TextView
                android:id="@+id/rankingPosition_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/bergen_sans_bold"
                android:text="#1"
                android:textColor="@color/quest_pink"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profilePic_ranking"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/rankingPosition_ranking"
                app:layout_constraintStart_toEndOf="@+id/rankingPosition_ranking"
                app:layout_constraintTop_toTopOf="@+id/rankingPosition_ranking"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/displayName_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/tcm"
                android:text="Display Name"
                android:textColor="@color/quest_blue"
                app:layout_constraintBottom_toBottomOf="@+id/profilePic_ranking"
                app:layout_constraintStart_toEndOf="@+id/profilePic_ranking"
                app:layout_constraintTop_toTopOf="@+id/profilePic_ranking" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>